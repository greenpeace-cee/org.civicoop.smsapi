<?xml version="1.0"?>
<extension key="org.civicoop.smsapi" type="module">
  <file>smsapi</file>
  <name>SMS API</name>
  <description>API to send an sms to a contact</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Jaap Jansma - CiviCooP</author>
    <email>helpdesk@civicoop.org</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://lab.civicrm.org/extensions/smsapi</url>
    <url desc="Documentation">https://lab.civicrm.org/extensions/smsapi/-/blob/main/README.md</url>
    <url desc="Support">https://lab.civicrm.org/extensions/smsapi/-/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2023-07-01</releaseDate>
  <version>1.7-dev</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.46</ver>
  </compatibility>
  <comments>
    Original developed by http://civicoop.org. Contributed by http://www.ixiam.com and https://www.manchestermind.org
  </comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
    <psr0 prefix="CRM_" path="."/>
  </classloader>
  <civix>
    <namespace>CRM/Smsapi</namespace>
    <format>24.09.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.3</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
  </mixins>
  <upgrader>CiviMix\Schema\Smsapi\AutomaticUpgrader</upgrader>
</extension>
